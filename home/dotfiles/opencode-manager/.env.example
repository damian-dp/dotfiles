# OpenCode Manager Environment Variables
# Copy this to .env and fill in your values

# Required for production - generate with: openssl rand -base64 32
AUTH_SECRET=

# Trusted origins for authentication (comma-separated)
# Add your Tailscale hostname for remote access
AUTH_TRUSTED_ORIGINS=http://localhost:5003

# Set to true if using HTTPS (e.g., via Tailscale HTTPS)
AUTH_SECURE_COOKIES=false

# Tailscale auth key (for remote/VM mode)
# Get from: https://login.tailscale.com/admin/settings/keys
TS_AUTHKEY=

# Your Tailscale tailnet domain (find in Tailscale admin DNS settings)
# Format: taild53693.ts.net (without hostname prefix)
TS_TAILNET=

# Tailscale hostname for this machine (default: opencode-vm)
TS_HOSTNAME=opencode-vm
